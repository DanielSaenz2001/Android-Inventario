<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_16">


    <TextView
        android:id="@+id/txtTituloPrima"
        style="@style/TitleDetailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounder"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Materia Prima" />

    <TextView
        android:id="@+id/prima_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounder0"
        android:gravity="center"
        android:textColor="@color/descripColorSi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/txtTituloPrima"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloPrima"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/txtOrigenPrima"
        style="@style/TitleDetailText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounder0"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prima_name"
        tools:text="Origen" />

    <TextView
        android:id="@+id/prima_origen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounder0"
        android:gravity="center"
        android:textColor="@color/descripColorSi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOrigenPrima"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/txtDetallesPrima"
        style="@style/TitleDetailText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounder0"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prima_origen"
        tools:text="Detalles de la materia prima" />

    <TextView
        android:id="@+id/txtDetallesStockPrima"
        style="@style/TitleDetailText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:background="@drawable/rounder0"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/txtDetallesUnidadPrima"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDetallesPrima"
        tools:text="Stock" />

    <TextView
        android:id="@+id/txtDetallesUnidadPrima"
        style="@style/TitleDetailText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounder0"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtDetallesStockPrima"
        app:layout_constraintTop_toBottomOf="@+id/txtDetallesPrima"
        tools:text="Unidad" />

    <TextView
        android:id="@+id/prima_stock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:background="@drawable/rounder2"
        android:gravity="center"
        android:textColor="@color/descripColorSi"
        app:layout_constraintEnd_toStartOf="@+id/txtDetallesUnidadPrima"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDetallesStockPrima"
        tools:text="Stock" />

    <TextView
        android:id="@+id/prima_unidad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounder3"
        android:gravity="center"
        android:textColor="@color/descripColorSi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtDetallesStockPrima"
        app:layout_constraintTop_toBottomOf="@+id/txtDetallesUnidadPrima"
        tools:text="Unidad" />

</androidx.constraintlayout.widget.ConstraintLayout>
