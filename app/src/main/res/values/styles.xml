<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/windowBackground</item>
        <item name="android:windowLightNavigationBar">@bool/windowLightStatusBar</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="titleTextColor">@color/textColor</item>
        
        <item name="colorControlNormal">@color/textColor</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <style name="CustomCardview1" parent="CardView">
        <item name="cardBackgroundColor">@color/post_background</item>
        <item name="strokeColor">@color/textColor</item>
        <item name="strokeWidth">3dp</item>
    </style>
    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:popupBackground"> @color/post_background</item>
        <item name="android:background"> @color/post_background</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/bulbColor</item>
    </style>
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TitleText">
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_8</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextDescription">
        <item name="android:layout_marginStart">@dimen/dimen_8</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
        <item name="android:layout_marginEnd">@dimen/dimen_4</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/textDescription</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextDescriptionTitle">
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/textDescription</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubTitleText">
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/textColorSi</item>

    </style>

    <style name="StyleImage">
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="android:layout_marginBottom">@dimen/dimen_16</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="StatusTextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StatusView">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dimen_8</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="DataRecyclerStyle">
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:paddingTop">@dimen/dimen_4</item>
    </style>

    <style name="ToolbarTitleTextAppearance"
        parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="TitleDetailText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>


    <style name="SubTitleDetailText">

        <item name="android:drawablePadding">@dimen/dimen_4</item>
        <item name="drawableTint">@android:color/secondary_text_dark</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
    </style>

    <style name="BodyText">
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">@dimen/dimen_4</item>
    </style>

</resources>